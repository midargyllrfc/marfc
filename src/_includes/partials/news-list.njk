<ul class="wrapper grid mt-l-xl" role="list" data-rows="masonry" data-layout="50-50">
  {% if not headerLevel %}
    {% set headerLevel = "h3" %}
  {% endif %}
  {% if not countLimit %}
    {% set countLimit = 10000000000 %}
  {% endif %}
  {% for newsItem in news %}
    {% if loop.index0 < countLimit %}
      <li class="card flow clickable-card overflow-hidden">
        <{{ headerLevel }}>
          <a href="/news/{{ newsItem.date | formatDate('DD-MM-YYYY') }}/{{ newsItem.title.rendered | slug }}/">{{ newsItem.title.rendered | safe }}</a>
        </{{ headerLevel }}>
        {% set definedDate = newsItem.date_gmt %}
        {% include "partials/date.njk" %}
        <p>{{ newsItem.content.rendered | excerpt  }}</p>
      </li>
    {% endif %}
  {% endfor %}
</ul>